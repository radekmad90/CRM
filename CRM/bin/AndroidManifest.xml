<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.radek.madej.crm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:name=".CRMApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddCustomerActivity"
            android:label="@string/title_activity_add_customer">
        </activity>
        <activity
            android:name=".activities.GeocodedListActivity"
            android:label="@string/title_activity_geocoded_list" >
        </activity>
    </application>

</manifest>
