<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragments.NewClientFragment" >

    <TextView
        android:id="@+id/add_customer_text_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="13sp"
        android:text="@string/customer_add"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/new_customer_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/new_customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" >
    </EditText>

    <TextView
        android:id="@+id/new_customer_city_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_city"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/new_customer_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" >
    </EditText>

    <TextView
        android:id="@+id/new_customer_street_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_street"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/new_customer_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" >
    </EditText>

    <TextView
        android:id="@+id/new_customer_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_number"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/new_customer_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" >
    </EditText>

    <Button
        android:id="@+id/add_customer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_customer" />

    <FrameLayout
        android:id="@+id/geocoded_fragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

</LinearLayout>